{
  "name": "student",
  "plural": "students",
  "base": "PersistedModel",
  "idInjection": true,
  "mongodb": {
    "collection": "student"
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "sex": {
      "type": "number",
      "required": true
    },
    "birthday": {
      "type": "date"
    },
    "updatedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "grades": {
      "type": "embedsMany",
      "model": "grade",
      "option": {
        "validate": true,
        "autoId": true
      }
    },
    "belongToMyUser": {
      "type": "belongsTo",
      "model": "myuser",
      "foreignKey": "user_id"
    },
    "belongToParent": {
      "type": "belongsTo",
      "model": "parent",
      "foreignKey": "parent_id"
    },
    "belongToTeacher": {
      "type": "belongsTo",
      "model": "teacher",
      "foreignKey": "teacher_id"
    }      
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "teacher",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "student",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "parent",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
