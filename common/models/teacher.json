{
  "name": "teacher",
  "plural": "teachers",
  "base": "PersistedModel",
  "idInjection": true,
  "mongodb": {
    "collection": "teacher"
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "sex": {
      "type": "number",
      "required": true
    },
    "birthday": {
      "type": "date"
    },
    "updatedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "hasManyStudents":{
      "type": "hasMany",
      "model": "student",
      "foreignKey":"teacher_id"
    },
    "belongToMyUser": {
      "type": "belongsTo",
      "model": "myuser",
      "foreignKey": "user_id"
    },
    "activities": {
      "type": "embedsMany",
      "model": "activity",
      "option": {
        "validate": true,
        "autoId": true
      }
    },
    "notices": {
      "type": "embedsMany",
      "model": "notice",
      "option": {
        "validate": true,
        "autoId": true
      }
    },
    "homeworks": {
      "type": "embedsMany",
      "model": "homework",
      "option": {
        "validate": true,
        "autoId": true
      }
    },
    "subjects": {
      "type": "embedsMany",
      "model": "subject",
      "option": {
        "validate": true,
        "autoId": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "teacher",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
