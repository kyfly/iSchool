{
  "name": "parent",
  "plural": "parents",
  "base": "PersistedModel",
  "idInjection": true,
  "mongodb": {
    "collection": "parent"
  },
  "properties": {
    "updatedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "hasManyStudents":{
      "type": "hasMany",
      "model": "student",
      "foreignKey":"teacher_id"
    },    
    "belongToMyUser": {
      "type": "belongsTo",
      "model": "myuser",
      "foreignKey": "user_id"
    },
    "messages": {
      "type": "embedsMany",
      "model": "message",
      "option": {
        "validate": true,
        "autoId": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "teacher",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "parent",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
